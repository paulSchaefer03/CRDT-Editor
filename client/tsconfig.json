{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "lib": ["DOM", "ESNext"],
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "typeRoots": ["./node_modules/@types", "./public/src/types"]
    },
    "include": ["public/src/**/*"]
}